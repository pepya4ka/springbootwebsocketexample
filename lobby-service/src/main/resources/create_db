CREATE TABLE lobbies
(
    id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(20),
    max_players INT,
    move_time_sec INT,
    owner_id INT,
    started bool
);

CREATE TABLE players
(
    id INTEGER PRIMARY KEY AUTO_INCREMENT ,
    username VARCHAR(20),
    lobby_id INT,
    ready bool,
    FOREIGN KEY (lobby_id) REFERENCES lobbies (id)
);

ALTER TABLE lobbies
    ADD FOREIGN KEY (owner_id) REFERENCES players (id);
